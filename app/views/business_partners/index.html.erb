<h1>Listing Business Partners</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_partners.each do |business_partner| %>
      <tr>
        <td><%= business_partner.name %></td>
        <td><%= link_to 'Show', business_partner %></td>
        <td><%= link_to 'Edit', edit_business_partner_path(business_partner) %></td>
        <td><%= link_to 'Destroy', business_partner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

